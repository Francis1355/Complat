@keyframes pulse
	0% {transform: scale(0);}
	75% {transform: scale(1.4);}
	100% {transform: scale(1);}


.form-login li label 
	input[type="checkbox"] 
		display none 		
		+ .label-text:before
			content "\f096"
			font-family "FontAwesome"
			speak none 
			font-style normal 
			font-weight normal
			font-variant normal
			text-transform none 
			line-height 1
			-webkit-font-smoothing antialiased 
			width 1em 
			display inline-block 
			margin-right 5px 
			font-size 18px 
		&:checked + .label-text:before
			content "\f14a"
			color azul_complat //#00D079
			animation pulse 180ms ease-in
					
		&:disabled + .label-text
			color #aaa
			&:before 
				content "\f0c8"
				color #ccc
.form-login li button 
	background azul_complat
	color white 
	padding 15px 15px 15px 15px 
	box-sizing border-box  
	border-radius 2px
	&:hover 
		background #0489B1
		transition-duration 0.3s
	&:active 
		background #0B2F3A

.icon-login:before
