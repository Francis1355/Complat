//Inicia login

.fondo-obscuro
	position fixed 
	top 0
	left 0
	width 100%
	height 100%
	opacity 0.6
	background-color #000
	z-index 2
	display none

.login-box 
	width 550px 
	height auto 
	background white 
	z-index 4
	position absolute
	left 0
	right 0
	margin-left auto 
	margin-right auto
	margin auto 
	top 10px 
	padding 10px 10px 10px 10px 
	box-sizing border-box
	display none 
	border-radius 2px 
	-webkit-box-shadow: 0px 0px 20px 0px rgba(50, 50, 50, 0.75);
	-moz-box-shadow:    0px 0px 20px 0px rgba(50, 50, 50, 0.75);
	box-shadow:         0px 0px 20px 0px rgba(50, 50, 50, 0.75);
.login-box ul 
	list-style none 
.login-box ul li 
	margin-left -40px 
	margin-bottom 5px 

.btn-cerrar-login
	float right 
	text-decoration none 
	color black 
	font-size 18px 
	&:hover 
		transition-duration 0.2s
		color azul_complat

.form-login 
	list-style none 
	border-top solid 1px #E6E6E6
	border-bottom solid 1px #E6E6E6
	padding-top 20px 
	
.form-login  li 
	margin-left -40px 
.form-login li label 
	margin-left -5px 
	

.form-login input, label, button 
	width 100%  
	margin-bottom 20px 
	padding 5px 
	box-sizing border-box
	border none 
	color #3A3A3A 
	text-align center 
	
.form-login input
	outline none 
	margin-top 5px 
	color #666
	border 1px solid #AAA
	box-shadow 0px 0px 3px #ccc, 0 10px 15px #eee inset
	border-radius 2px
	height 40px 
	&:focus 
		background #fff
		border 1px solid azul_complat //#555
 		outline none 


.form-login li button
	margin-top 20px 
	

@keyframes pulse
	0% {transform: scale(0);}
	75% {transform: scale(1.4);}
	100% {transform: scale(1);}


.form-login li label 
	input[type="checkbox"] 
		display none 		
		+ .label-text:before
			content "\f096"
			font-family "FontAwesome"
			speak none 
			font-style normal 
			font-weight normal
			font-variant normal
			text-transform none 
			line-height 1
			-webkit-font-smoothing antialiased 
			width 1em 
			display inline-block 
			margin-right 5px 
			font-size 18px 
		&:checked + .label-text:before
			content "\f14a"
			color azul_complat //#00D079
			animation pulse 180ms ease-in
					
		&:disabled + .label-text
			color #aaa
			&:before 
				content "\f0c8"
				color #ccc
.form-login li button 
	background azul_complat
	color white 
	padding 15px 15px 15px 15px 
	box-sizing border-box  
	border-radius 2px
	&:hover 
		background #0031C2
		transition-duration 0.5s
	&:active 
		background #002081

.icon-login:before
	content "\f023"
	font-family "FontAwesome"
	margin-right 5px 
	color red
.titulo-login
	color red  
		

//Termina login 


